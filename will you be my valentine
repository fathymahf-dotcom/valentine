    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    text-align: center;
    width: 90%;
    max-width: 420px;
    position: relative;
  }

  h1 {
    margin-bottom: 0.5rem;
    font-size: 2rem;
  }

  p {
    color: #555;
    margin-bottom: 1.5rem;
  }

  button {
    padding: 12px 28px;
    border: none;
    border-radius: 999px;
    font-size: 1rem;
    cursor: pointer;
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    transition: transform 0.2s ease, opacity 0.4s ease;
  }

  button:hover {
    transform: scale(1.05);
