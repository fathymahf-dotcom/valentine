<body>

<div class="container">
  <!-- 404 Screen -->
  <div id="errorScreen">
    <h1>404 üíî</h1>
    <p>Oops! Page Not Found</p>
    <button class="refresh" onclick="showValentine()">Refresh</button>
  </div>

  <!-- Valentine Screen -->
  <div id="valentineScreen" class="valentine">
    <h1>Will you be my Valentine? <span id="heart">üíî</span></h1>

    <div class="buttons">
      <button class="yes" id="yesBtn">YES</button>
      <button class="no" id="noBtn">NO</button>
    </div>

    <div class="agreement" id="agreement">
      <p><strong>By clicking YES you agree to:</strong></p>
      <p>
        ‚ù§Ô∏è Unlimited cuddles<br>
        üçï Lifetime supply of bad puns<br>
        üòè Mutual pizza stealing rights<br><br>
        Effective immediately! üöÄ
      </p>
    </div>
  </div>
</div>

<script>
  const errorScreen = document.getElementById("errorScreen");
  const valentineScreen = document.getElementById("valentineScreen");
  const noBtn = document.getElementById("noBtn");
  const yesBtn = document.getElementById("yesBtn");
  const agreement = document.getElementById("agreement");
  const heart = document.getElementById("heart");

  let noClicks = 0;

  function showValentine() {
    errorScreen.classList.add("hidden");
    setTimeout(() => {
      errorScreen.style.display = "none";
      valentineScreen.style.display = "block";
    }, 500);
  }

  noBtn.addEventListener("click", () => {
    noClicks++;

    const x = Math.random() * (window.innerWidth - 120);
    const y = Math.random() * (window.innerHeight - 60);

    noBtn.style.position = "fixed";
    noBtn.style.left = `${x}px`;
    noBtn.style.top = `${y}px`;

    const gradients = [
      ["#ffdde1", "#ee9ca7"],
      ["#cdb4db", "#ffc8dd"],
      ["#a2d2ff", "#bde0fe"],
      ["#ffd6a5", "#fdffb6"]
    ];
    const g = gradients[Math.floor(Math.random() * gradients.length)];
    document.body.style.background = `linear-gradient(135deg, ${g[0]}, ${g[1]})`;

    if (noClicks >= 2) {
      heart.textContent = "üò≠";
    }
  });

  yesBtn.addEventListener("click", () => {
    agreement.style.display = "block";

    setTimeout(() => {
      yesBtn.classList.add("hidden");
      noBtn.classList.add("hidden");
    }, 1000);

    startConfetti();
    setTimeout(stopConfetti, 5000);
  });

  function startConfetti() {
    for (let i = 0; i < 150; i++) {
      const confetti = document.createElement("div");
      confetti.className = "confetti";
      confetti.style.left = Math.random() * 100 + "vw";
      confetti.style.background =
        `hsl(${Math.random() * 360}, 80%, 60%)`;
      confetti.style.animationDuration = 2 + Math.random() * 3 + "s";
      document.body.appendChild(confetti);

      setTimeout(() => confetti.remove(), 5000);
    }
  }

  function stopConfetti() {
    document.querySelectorAll(".confetti").forEach(c => c.remove());
  }
</script>

</body>
